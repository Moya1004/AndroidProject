<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SingleUser_Image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/SingleUser_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SingleUser_Image"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/SingleUser_Image"
        android:layout_toRightOf="@+id/SingleUser_Image"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/SingleUser_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SingleUser_Image"
        android:layout_alignLeft="@+id/SingleUser_Name"
        android:layout_alignStart="@+id/SingleUser_Name"
        android:text="Status" />
</RelativeLayout>